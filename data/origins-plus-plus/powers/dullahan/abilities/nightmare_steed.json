{
  "type": "origins:multiple",
  "resource": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,
    "hud_render": {
      "should_render": false
    }
  },
  "if_died": {
    "type": "origins:action_on_callback",
    "entity_action_respawned": {
      "type": "origins:execute_command",
      "command": "execute as @s at @s run function origins-plus-plus:dullahan/kill_steed {power:\"power\",resource:\"resource\"}"
    },
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_resource",
      "comparison": ">=",
      "compare_to": 1
    }
  },
  "activate": {
    "type": "origins:active_self",
    "hud_render": {
      "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
      "bar_index": 17
    },
    "key": "key.origins.secondary_active",
    "cooldown": 5000,
    "entity_action": [
      {
        "type": "origins:execute_command",
        "command": "execute as @s run function origins-plus-plus:dullahan/summon_steed {power:\"power\",resource:\"resource\"}"
      },
      {
        "type": "origins:change_resource",
        "resource": "*:*_resource",
        "change": 1
      },
      {
        "type": "origins:play_sound",
        "sound": "block.beacon.power_select",
        "pitch": 0.7
      },
      {
        "type": "origins:delay",
        "ticks": 2400,
        "action": [
          {
            "type": "origins:execute_command",
            "command": "execute as @s at @s run function origins-plus-plus:dullahan/kill_steed {power:\"power\",resource:\"resource\"}"
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_resource",
            "change": -1
          }
        ]
      }
    ]
  }
}