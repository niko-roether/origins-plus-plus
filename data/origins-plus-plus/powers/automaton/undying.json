{
  "type": "origins:multiple",
  "timer": {
    "type": "origins:resource",
    "min": 0,
    "max": 15,
    "start_value": 15,
    "hud_render": {
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
      "bar_index": 1
    },
    "min_action": {
      "type": "origins:execute_command",
      "command": "kill @s"
    }
  },
  "prevent_death": {
    "type": "origins:prevent_death",
    "entity_action": {
      "type": "origins:execute_command",
      "command": "function origins-plus-plus:automaton/undying {power:\"power\",resource:\"resource\"}"
    },
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_timer",
      "comparison": ">",
      "compare_to": 0
    }
  },
  "deplete": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_timer",
      "change": -1
    },
    "interval": 20,
    "condition": {
      "type": "origins:all_of",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "origins-plus-plus:automaton/firebar",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:resource",
          "resource": "origins-plus-plus:automaton/waterbar",
          "comparison": "==",
          "compare_to": 0
        }
      ]
    }
  },
  "replenish": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_timer",
      "change": 1
    },
    "interval": 20,
    "condition": {
      "type": "origins:all_of",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "origins-plus-plus:automaton/firebar",
          "comparison": ">",
          "compare_to": 0
        },
        {
          "type": "origins:resource",
          "resource": "origins-plus-plus:automaton/waterbar",
          "comparison": ">",
          "compare_to": 0
        }
      ]
    }
  }
}